{
  "name": "just-simple",
  "version": "0.1.3",
  "description": "Simple utilities for diagnostics and logging",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "winston": "^3.0.0",
    "eslint-plugin-html": "^4.0.5",
    "mocha": "^5.2.0",
    "should": "^11.2.0",
    "vue-template-compiler": "^2.6.10"
  },
  "scripts": {
    "build": "vue-cli-service build",
    "clear:sounds": "rimraf local/sounds",
    "dev": "npm run build; echo 'UI-only service'; npm run serve",
    "lint": "vue-cli-service lint",
    "serve": "vue-cli-service serve",
    "start": "npm run build; scripts/sc-voice.js",
    "start:ssl": "npm run build; scripts/sc-voice.js --ssl",
    "start:staging": "npm run build; scripts/sc-voice.js --staging",
    "test": "npm run test:verbose",
    "test:test": "mocha -w -R min --inline-diffs -g TEST",
    "test:verbose": "mocha --inline-diffs",
    "test:watch": "mocha -w --inline-diffs"
  },
  "repository": {
    "tag": "git"
  },
  "bin": {},
  "keywords": [
    "SuttaCentral",
    "translation",
    "Javascript",
    "Pootl"
  ],
  "author": "Karl Lew",
  "homepage": "https://github.com/oyamist/just-simple",
  "license": "MIT",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
